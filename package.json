{
  "name": "back2bikes-attendance",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "lint": "eslint .",
    "pretest": "npm run lint --silent"
  },
  "description": "Workshop attendance app for back2bikes volunteers.",
  "directories": {
    "doc": "docs"
  },
  "dependencies": {
    "autoprefixer": "^6.5.0",
    "casual": "1.5.0",
    "lodash": "^4.15.0",
    "meteor-node-stubs": "^0.2.3",
    "react": "^15.3.1",
    "react-addons-pure-render-mixin": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-modal": "^1.4.0",
    "react-router": "^2.8.1",
    "semantic-ui-css": "^2.2.4",
    "stardust": "^0.52.5",
    "sugar": "^2.0.1",
    "typescript": "^1.8.10"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "babel-eslint": "^6.1.2",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-import-resolver-meteor": "^0.3.3",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-meteor": "^4.0.0",
    "eslint-plugin-react": "^6.2.0"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "settings": {
      "import/resolver": "meteor"
    },
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/no-extraneous-dependencies": "off"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Back2bikes/attendance-app.git"
  },
  "author": "Joseph Szili",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Back2bikes/attendance-app/issues"
  },
  "homepage": "https://github.com/Back2bikes/attendance-app#readme"
}
